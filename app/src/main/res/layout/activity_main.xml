<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/output"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:hint="0"
                android:textSize="80dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary" />

            <TextView
                android:id="@+id/input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:hint="0"
                android:textSize="80dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end">

            <Button
                android:id="@+id/btnbacks"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="⌫"
                android:gravity="center_horizontal"
                android:textSize="40dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnc"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="c"
                android:gravity="center_horizontal"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btnrt"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="√"
                android:gravity="center_horizontal"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btnpow"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="^"
                android:gravity="center_horizontal"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btnadd"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:gravity="center_horizontal"
                android:textSize="40dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn7"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="7"
                android:gravity="center_horizontal"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="8"
                android:gravity="center_horizontal"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="9"
                android:gravity="center_horizontal"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btnsub"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:gravity="center_horizontal"
                android:textSize="40dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn4"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="4"
                android:gravity="center_horizontal"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="5"
                android:gravity="center_horizontal"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="6"
                android:gravity="center_horizontal"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btnmul"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="x"
                android:gravity="center_horizontal"
                android:textSize="40dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:gravity="center_horizontal"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:gravity="center_horizontal"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="3"
                android:gravity="center_horizontal"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btndiv"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="/"
                android:gravity="center_horizontal"
                android:textSize="40dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btndec"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="."
                android:gravity="center_horizontal"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center_horizontal"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btnans"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="="
                android:gravity="center_horizontal"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btnpercent"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="%"
                android:gravity="center_horizontal"
                android:textSize="40dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>